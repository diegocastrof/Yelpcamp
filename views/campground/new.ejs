<%- include ("../partials/header") %>

<div class="container">
    <h1 class="mt-2 text-center">Create a new campground</h1>

    <div class="w-25 mx-auto my-3">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Campground Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price" min="0.00" step="0.1">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>

        <a href="/campgrounds">Back to campgrounds</a>
    </div>
   
</div>


<%- include ("../partials/footer") %>