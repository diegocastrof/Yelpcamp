<%- include ("../partials/header") %>

<div class="container">
    <h1 class="mt-2 text-center">Edit <%= campground.name %></h1>

    <div class="w-25 mx-auto my-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" cols="30" rows="10"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" value="<%= campground.price %>" min="0.00" step="0.1">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>

        <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
    </div>
</div>


<%- include ("../partials/footer") %>